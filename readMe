-DANDROID=1 -DCMAKE_TOOLCHAIN_FILE=/home/lhy/installbag/android-ndk-r25b/build/cmake/android.toolchain.cmake -DANDROID_NATIVE_API_LEVEL=24 -DANDROID_ABI=armeabi-v7a


android-32
----------------------------------------------
#! /usr/bin/bash

if [ $1 == "config" ]
then
	/usr/local/bin/cmake -DCMAKE_BUILD_TYPE=Release -DANDROID_ARM32=true -DANDROID=1 -DCMAKE_TOOLCHAIN_FILE=/home/lhy/install/android-ndk-r25b/build/cmake/android.toolchain.cmake -DANDROID_NATIVE_API_LEVEL=24 -DANDROID_ABI=armeabi-v7a -S /mnt/d/bywg/project/exhibition -B /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_android_armeabi-v7a
elif [ $1 == "all" ]
then
	cd /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_android_armeabi-v7a
	/usr/local/bin/cmake --build /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_android_armeabi-v7a --target all -- -j 9
elif [ $1 == "install" ]
then
	cd /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_android_armeabi-v7a
	/usr/local/bin/cmake --build /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_android_armeabi-v7a --target install -- -j 9
else
	echo "undefined"
fi


arm64
----------------------------------------------
#! /usr/bin/bash

if [ $1 == "config" ]
then
	/usr/local/bin/cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_C_COMPILER=/usr/bin/aarch64-linux-gnu-gcc-8 -DCMAKE_CXX_COMPILER=/usr/bin/aarch64-linux-gnu-g++-8 -DLINUX_ARM64=true -S /mnt/d/bywg/project/exhibition -B /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_arm64-v8a
elif [ $1 == "all" ]
then
	cd /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_arm64-v8a
	/usr/local/bin/cmake --build /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_arm64-v8a --target all -- -j 9
elif [ $1 == "install" ]
then
	cd /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_arm64-v8a
	/usr/local/bin/cmake --build /mnt/d/bywg/project/exhibition/cmake-build-minsizerel_arm64-v8a --target install -- -j 9
else
	echo "undefined"
fi
